<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_messages_list_view_message"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:scrollbars="vertical"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/btn_messages_list_view_delete_message"
        android:layout_width="42dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/text_messages_list_view_message"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="-6dp"
        android:layout_toEndOf="@+id/text_messages_list_view_message"
        android:src="@android:drawable/ic_menu_delete" />

    <TextView
        android:id="@+id/text_messages_list_view_sender"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_messages_list_view_message"
        android:layout_alignStart="@+id/text_messages_list_view_message"
        android:layout_marginTop="9dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/text_messages_list_view_date"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_messages_list_view_message"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="14dp"
        android:gravity="right"
        android:textColor="@color/design_default_color_primary_dark"
        android:textStyle="bold|italic" />
</RelativeLayout>
